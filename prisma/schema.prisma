generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  password String
  email String @unique
  createdAt DateTime @default(now())
  recieiver Message[] @relation(name: "recieiver")
  sender Message[] @relation(name: "sender")
}

model Message {
  id Int @id @default(autoincrement())
  text String
  recieiverId Int
  recieiver User @relation(name: "recieiver", fields: [recieiverId], references: [id])
  senderId Int
  sender User @relation(name: "sender",fields: [senderId], references: [id])
  createdAt DateTime @default(now())
}